<div class="grid-x grid-margin-x">
  <div class="cell large-12 warning">
    Вы действительно хотите удалить читателя <%= @reader.surname%> <%= @reader.name%> <%= @reader.patronymic%>?
  </div>
</div>

<% form({method: :post},{obj: @parameters}) do |f|%>
<div class="grid-x grid-margin-x">
  <div class="cell large-12 ">
    <%=f.input(:confirmation,type: :checkbox, label: 'Подтверждаю удаление')%>
  </div>
  <div class="large-12 cell">
    <%= f.button(value: 'Удалить',class: 'button warning')%>
    <a href="/readers/<%= @reader.id %>" class="button secondary">Отмена</a>
  </div>
</div>
<%end%>