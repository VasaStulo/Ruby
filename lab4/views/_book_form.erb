<% form({method: :post},{obj: @parameters}) do |f|%>
<div class="grid-x grid-margin-x">
  <div class="large-12 cell">
    <%= f.input(:author, type: :text,label:'Автор',placeholder:'А.С.Пушкин')%>
  </div>
  <div class="large-12 cell">
    <%= f.input(:title, type: :text, label:'Название книги',placeholder:'Капитанская дочка')%>
  </div>
  <div class="large-12 cell">
    <%= f.input(:number, type: :text, label:'Инвентаризационный номер',placeholder:'786543-1')%>
  </div>
  <div class="large-12 cell">
    <%= f.input(:genre, type: :text, label:'Жанр',placeholder:'Роман')%>
  </div>
  <div class="large-12 cell">
    <%= f.input(:age_rating, type: :text, label:'Возрастное ограничение',placeholder:'16')%>
  </div>
  <div class="large-12 cell">
    <%= f.button(value: form_type,class: 'button')%>
    <a href="<%= back_location %>" class="button secondary">Отмена</a>
  </div>
</div>
<%end%>